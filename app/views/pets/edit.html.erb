<h1>Editing <%= @pet.name %> </h1>
<h1>New Pet</h1>
<%= form_for @pet do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, required: true %>
  <br/>
  <%= f.label :age %>
  <%= f.number_field :age, required: true %>
  <br/>
  <%= f.label :kind %>
  <%= f.text_field :kind, required: true %>
  <br/>
  <%= f.label :gender %>
  <%= f.select :gender, ['M', 'F'] %>
  <br/>
  <%= f.submit %>
<% end %>
<br/>
<%= link_to 'Back', pet_path(@pet), class: 'btn btn-primary' %>
