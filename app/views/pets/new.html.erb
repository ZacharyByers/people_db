<h1>New Pet</h1>
<%= form_for @pet do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, required: true %>
  <br/>
  <%= f.label :age %>
  <%= f.number_field :age, required: true %>
  <br/>
  <%= f.label :kind %>
  <%= f.text_field :kind, required: true %>
  <br/>
  <%= f.label :gender %>
  <%= f.select :gender, ['M', 'F'] %>
  <br/>
  <%= f.hidden_field :person_id, value: @person.id %>
  <%= f.submit %>
<% end %>
<br/>
<%= link_to 'Back', person_path(@person), class: 'btn btn-primary' %>
