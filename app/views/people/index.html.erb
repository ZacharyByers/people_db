<div class = 'entry-list'>
  <h1>People</h1>

    <% if @people.any? %>
      <% @people.each do |person| %>
        <div class = 'entry'>
          <h4>
            <%= link_to person.name, person_path(person) %>
          </h4>
          <i>
            <%= link_to 'Edit', edit_person_path(person), class: 'btn btn-outline-primary' %>
            <%= link_to 'Delete', person_path(person),
                  method: :delete,
                  data: { confirm: 'Really Delete?'},
                  class: 'btn btn-outline-danger' %>
          </i>
        </div>
        <br/>
      <% end %>

      <% else %>
        <h4> Nobody here. <h4>
    <% end %>

  <%= link_to 'New Person', new_person_path, class: 'btn btn-success' %>
</div>
